{
  "manifest_version": 3,
  "name": "Decision Drift",
  "version": "1.0.0",
  "description": "Capture intent when you bookmark and review your decisions",
  "permissions": [
    "bookmarks",
    "storage",
    "alarms",
    "notifications",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "extension/background.js"
  },
  "action": {
    "default_popup": "extension/popup.html",
    "default_icon": {
      "16": "extension/icons/icon16.png",
      "48": "extension/icons/icon48.png",
      "128": "extension/icons/icon128.png"
    }
  },
  "icons": {
    "16": "extension/icons/icon16.png",
    "48": "extension/icons/icon48.png",
    "128": "extension/icons/icon128.png"
  },
  "options_page": "extension/options.html"
}
